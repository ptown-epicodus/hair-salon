{% extends 'root.html.twig' %}

{% block content %}
    <h2>Update {{ stylist.getName }}'s record:</h2>

    <form action='/stylists/{{ stylist.getId }}' method='post'>
        <input name='_method' type='hidden' value='patch'>

        <label for='stylist-name'>Rename stylist:</label>
        <input id='stylist-name' name='name' type='text'>

        <button type='submit'>Update</button>
    </form>

    <form action='/stylists/{{ stylist.getId }}' method='post'>
        <input name='_method' type='hidden' value='delete'>

        <button type='submit'>Remove stylist and clients from database</button>
    </form>

    <p><a href='/'>Home</a></p>
{% endblock %}

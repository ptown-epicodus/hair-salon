{% extends 'root.html.twig' %}

{% block content %}
    <div class='panel panel-warning'>
        <div class='panel-heading'>
            <h2 class='panel-title'>Update {{ stylist.getName }}'s record:</h2>
        </div>
        <div class='panel-body'>
            <form action='/stylists/{{ stylist.getId }}' method='post'>
                <input name='_method' type='hidden' value='patch'>

                <div class='form-group'>
                    <label for='stylist-name'>Rename stylist:</label>
                    <input id='stylist-name' name='name' type='text' class='form-control'>
                </div>

                <button type='submit' class='btn btn-warning'>Update</button>
            </form>
        </div>
    </div>

    <form action='/stylists/{{ stylist.getId }}' method='post'>
        <input name='_method' type='hidden' value='delete'>

        <button type='submit' class='btn btn-danger'>Remove stylist and clients from database</button>
    </form>

    <p><a href='/'>Home</a></p>
{% endblock %}
